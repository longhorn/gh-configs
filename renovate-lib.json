// 20241230133805
// https://raw.githubusercontent.com/longhorn/release/refs/heads/main/renovate-lib.json

{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "baseBranches": [
    "master",
    "main"
  ],
  "dockerfile": {
    "fileMatch": [
      "Dockerfile.dapper"
    ]
  },
  "semanticCommits": "enabled",
  "semanticCommitType": "chore",
  "semanticCommitScope": "deps",
  "prHourlyLimit": 12,
  "timezone": "Asia/Taipei",
  "schedule": [
    "after 10am on saturday",
    "on sunday"
  ],
  "postUpdateOptions": [
    "gomodTidy"
  ],
  "vulnerabilityAlerts": {
    "automerge": true
  },
  "packageRules": [
    {
      "matchUpdateTypes": [
        "major",
        "minor"
      ],
      "enabled": false
    },
    {
      "matchUpdateTypes": [
        "major",
        "minor"
      ],
      "matchManagers": [
        "gomod",
        "dockerfile"
      ]
    },
    {
      "matchUpdateTypes": [
        "patch",
        "digest"
      ],
      "automerge": true,
      "groupName": "patch digest dependencies"
    },
    {
      "matchPackageNames": [
        "go"
      ],
      "allowedVersions": "<=1.22"
    },
    {
      "matchDatasources": [
        "docker"
      ],
      "automerge": true,
      "groupName": "docker dependencies"
    }
  ]
}
